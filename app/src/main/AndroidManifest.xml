<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="moonvishnya.xyz.luna">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-feature android:name="android.hardware.camera"
        android:required="true" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/moon_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/MyMaterialTheme">
        <activity
            android:name=".login_logic.LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".main_tab_logic.UserMainActivity"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity
            android:name=".chats_activity.DialogsActivity"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity
            android:name=".my_page.MyPageActivity"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity android:name=".login_logic.RegistrationActivity"
            android:label="Регистрация"/>

        <activity android:name=".main_tab_logic.AudioActivity"
            android:label="@string/Audio"/>

        <activity android:name=".main_tab_logic.ContactsActivity"
            android:label="@string/Contacts"/>

        <activity android:name=".main_tab_logic.DialogsActivity"
            android:label="@string/Dialogs"/>

        <activity android:name=".main_tab_logic.SettingsActivity"
            android:label="@string/Settings"/>
    </application>

</manifest>
